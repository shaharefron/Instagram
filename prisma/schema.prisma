// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model post {
  id        Int      @id @default(autoincrement())
  photoSrc  String
  userName  String
  createdAt DateTime
}

model user {
  name      String @id
  avatarSrc String
}

model likes {
  postId   Int    @id
  userName String
}
